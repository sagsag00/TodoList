<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    android:id="@+id/layoutNotification"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/projectNameNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text=""
        android:layout_marginLeft="6dp"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/task1Notification"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/projectNameNotification"
        android:layout_marginTop="12dp"
        android:paddingTop="8dp"
        android:layout_marginStart="6dp"
        android:singleLine="true"
        android:text=""
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/task2Notification"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task1Notification"
        android:layout_marginTop="12dp"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:layout_marginStart="6dp"
        android:text=""
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/task3Notification"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task2Notification"
        android:layout_marginTop="12dp"
        android:paddingTop="8dp"
        android:layout_marginStart="6dp"
        android:singleLine="true"
        android:text=""
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dueDateNotification"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/task3Notification"
        android:layout_marginTop="12dp"
        android:layout_marginStart="6dp"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:text="01/01/1970"
        android:gravity="start"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/importanceLevelNotification"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="6dp"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:text="important"
        android:gravity="end"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>